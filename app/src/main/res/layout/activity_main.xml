    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/onetwo"
            android:layout_marginBottom="30dp">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/listtwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
